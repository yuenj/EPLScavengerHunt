<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:colorBackground">@color/cardBackGround</item>
    </style>

    <style name="main_input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:keyTextColor">@color/colorDarkText</item>
        <item name="android:keyTextSize">30sp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textColorHint">@color/colorDarkText</item>
        <item name="android:colorPrimary">@color/colorDarkText</item>
        <item name = "backgroundTint">@color/colorDarkText</item>
    </style>


</resources>
