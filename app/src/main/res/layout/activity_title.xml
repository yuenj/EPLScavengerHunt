<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/cardview_light_background"
    tools:context="com.cmput401f17.eplscavengerhunt.activity.TitleActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_title"
        card_view:cardBackgroundColor="@color/cardBackGround"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardViewHeight"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="0dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Scavenger Hunt"
            android:textColor="@color/colorLightText"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/title_buttons"
        android:layout_below="@id/card_view_title"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/title_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button_text"
            android:backgroundTint="@color/colorButtonPink"
            android:layout_margin="10sp"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/title_rules_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_button_text"
            android:backgroundTint="@color/colorButtonPurple"
            android:layout_margin="10sp"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/title_about_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_button_text"
            android:backgroundTint="@color/colorButtonBlue"
            android:layout_margin="10sp"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/title_credits_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:text="@string/credits_button_text"
            android:backgroundTint="@color/colorButtonGreen"
            android:layout_margin="10sp"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/logo"
        android:paddingTop="0sp"
        android:paddingStart="15sp"
        android:layout_below="@id/title_buttons"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:src="@drawable/epl_logo"/>



</RelativeLayout>
