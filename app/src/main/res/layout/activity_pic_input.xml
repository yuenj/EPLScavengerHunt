<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:weightSum="100">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/cardBackGround"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question_zone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/question_temp_text"
                android:textColor="@color/colorLightText"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/question_prompt_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_zone_text_view"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/roboto_regular"
                android:text="This bird is 24 centimetres (9 inches) long and is easily identified by its long legs and short, barred tail. What bird am I?"
                android:textColor="@color/colorLightText"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="65"
            card_view:cardBackgroundColor="#000000"
            card_view:cardCornerRadius="20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/CV_pic_take_a_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="30dp"
                card_view:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/IV_pic_camera_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/camera" />

                    <TextView
                        android:id="@+id/TV_pic_camera_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingRight="5dp"
                        android:text="Take a picture of me!"
                        android:textAllCaps="true" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/RIV_pic_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                card_view:riv_corner_radius="40dp"
                card_view:riv_mutate_background="true" />

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:id="@+id/LL_pic_radio_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:weightSum="100">

                <android.support.v7.widget.CardView
                    android:id="@+id/CV_pic_choice_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="50"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="#F44336"
                    card_view:cardCornerRadius="20dp">

                    <RadioButton
                        android:id="@+id/RB_pic_choice_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:buttonTint="#ffffff"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Peregrine Falcon"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CV_pic_choice_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="50"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="#673AB7"
                    card_view:cardCornerRadius="20dp">

                    <RadioButton
                        android:id="@+id/RB_pic_choice_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:buttonTint="#ffffff"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Burrowing Owl"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:weightSum="100">

                <android.support.v7.widget.CardView
                    android:id="@+id/CV_pic_choice_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="50"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="#03A9F4"
                    card_view:cardCornerRadius="20dp">

                    <RadioButton
                        android:id="@+id/RB_pic_choice_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:buttonTint="#ffffff"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Humming Bird"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CV_pic_choice_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="50"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="#4CAF50"
                    card_view:cardCornerRadius="20dp">

                    <RadioButton
                        android:id="@+id/RB_pic_choice_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:buttonTint="#ffffff"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Barn Owl"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_pic_confirm"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/cardBackGround"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/colorLightText" />

            <Button
                android:id="@+id/question_skip_button"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/cardBackGround"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/skip_question"
                android:textAllCaps="true"
                android:textColor="@color/colorLightText" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>