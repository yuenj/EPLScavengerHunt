<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/results_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <!-- Thumbnail image -->
    <LinearLayout
        android:id="@+id/results_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip" />

    </LinearLayout>

    <!-- Question prompt -->
    <TextView
        android:id="@+id/results_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/results_thumbnail"
        android:layout_toRightOf="@+id/results_thumbnail"
        android:text="Which flower is this?"
        android:textColor="#d70d2b"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="monospace" />

    <!-- Users response -->
    <TextView
        android:id="@+id/results_response"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_prompt"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/results_thumbnail"
        android:text="Lily"
        android:textColor="#09b900"
        android:textSize="15dip"
        android:textStyle="bold" />

    <!-- Correct answer -->
    <TextView
        android:id="@+id/results_answer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_response"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/results_thumbnail"
        android:text="Poppy"
        android:textColor="#09b900"
        android:textSize="15dip"
        android:textStyle="bold" />

</RelativeLayout>