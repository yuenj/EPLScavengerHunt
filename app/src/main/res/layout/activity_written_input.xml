        <TextView
            android:id = "@+id/urlLink_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/question_temp_text"
            android:textColor="@color/colorLightText"
            android:textSize="30sp" />


    <!-- An editable text field with a prompt. Prompt will float above field if user is typing -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/written_user_answer_wrapper_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorDarkText"
        android:textSize="30sp">

        <EditText
            android:id="@+id/written_user_answer_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType= "textAutoCorrect"
            android:hint="@string/hint"
            android:textSize="30sp"
            android:textColor="@color/colorDarkText"
            android:imeOptions="actionSend" />

    </android.support.design.widget.TextInputLayout>


    <!-- Forces skip button to be at the very bottom as long as this layout is last in XML -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/question_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/cardBackGround"
            android:textColor="@color/colorLightText"
            android:text="@string/submit" />

        <Button
            android:id="@+id/question_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardBackGround"
            android:textColor="@color/colorLightText"
            android:text="@string/skip_question" />

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>