<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/written_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:weightSum="100"
    android:orientation="vertical">

        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            card_view:cardBackgroundColor="@color/cardBackGround"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question_zone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/question_temp_text"
                android:textColor="@color/colorLightText"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/question_prompt_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_zone_text_view"
                android:text="Hello and welcome to the wonderful world of magic and myster , and wonder, I'll be your guide to this world of terror
and hatered"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/colorLightText"
                android:textSize="15sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="vertical"
        android:weightSum="100">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="80"
        card_view:cardCornerRadius="0dp">

        <ImageView
            android:id="@+id/question_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="imageView"
            android:src="@drawable/burrowing_owl"
            />
        <!--<com.makeramen.roundedimageview.RoundedImageView-->
            <!--android:id="@+id/question_picture"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/burrowing_owl"-->
            <!--app:riv_corner_radius="20dp"-->
            <!--app:riv_mutate_background="true"-->
            <!--/>-->
    </android.support.v7.widget.CardView>
        <TextView
            android:id = "@+id/urlLink_question"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="@string/question_temp_text"
            android:textColor="@color/colorLightText"
            android:textSize="30sp" />



    <!-- An editable text field with a prompt. Prompt will float above field if user is typing -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/written_user_answer_wrapper_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:backgroundTint="@color/colorDarkText"
        android:textSize="30sp">

        <EditText
            android:id="@+id/written_user_answer_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType= "textAutoCorrect"
            android:hint="@string/hint"
            android:textSize="20sp"
            android:textColor="@color/colorDarkText"
            android:imeOptions="actionSend" />

    </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <!-- Forces skip button to be at the very bottom as long as this layout is last in XML -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/question_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/cardBackGround"
            android:textColor="@color/colorLightText"
            android:text="@string/submit" />

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/question_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardBackGround"
            android:textColor="@color/colorLightText"
            android:text="@string/skip_question" />

    </RelativeLayout>


</android.support.v7.widget.LinearLayoutCompat>