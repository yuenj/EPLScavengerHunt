<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.cmput401f17.eplscavengerhunt.activity.TitleActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_rules"
        card_view:cardBackgroundColor="@color/cardBackGround"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardViewHeight"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="0dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Rules"
            android:textColor="@color/colorLightText"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/rules_text_view"
        android:layout_below="@id/card_view_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:layout_marginTop="30dp"
        android:text="@string/rules_text"
        android:layout_marginHorizontal="10dp"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/title_buttons"
        android:layout_below="@id/rules_text_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/rules_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button_text"
            android:layout_margin="10sp"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/rules_return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_button_text"
            android:backgroundTint="#8e24aa"
            android:layout_margin="10sp"/>

    </LinearLayout>





</RelativeLayout>
