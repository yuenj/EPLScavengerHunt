<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    android:keepScreenOn="true"


    tools:context="com.cmput401f17.eplscavengerhunt.activity.TitleActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_rules"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardViewHeight"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/cardBackGround"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="Rules"
            android:textColor="@color/colorLightText"
            android:textSize="50sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/rules_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_rules"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center|top"
        android:text="@string/rules_text"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/title_buttons"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/rules_text_view"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/rules_start_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:backgroundTint="@color/colorButtonPink"
            android:text="@string/start_button_text" />

        <Button
            android:id="@+id/rules_return_button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:backgroundTint="@color/colorButtonPurple"
            android:text="@string/return_button_text" />

    </LinearLayout>
</RelativeLayout>
