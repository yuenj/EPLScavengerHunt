<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_yellow"
    android:orientation="vertical"
    android:weightSum="100">

    <ImageView
        android:id="@+id/IV_congrats_victory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:contentDescription="@string/congrats_trophy_content_description"
        android:paddingHorizontal="10dp"
        android:src="@drawable/trophy" />

    <TextView
        android:id="@+id/TV_congrats_msg_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="@string/congrats_msg_header"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/TV_congrats_msg_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingHorizontal="10dp"
        android:text="@string/congrats_msg_body"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_congrats_view_summary"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="#00000000"
        android:text="@string/goto_summary_activity_text"
        android:textAllCaps="true"
        android:textColor="#ffffffff" />

</LinearLayout>